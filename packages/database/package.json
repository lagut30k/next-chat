{
  "name": "@chat-next/database",
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "lint": "eslint ./src",
    "check-types": "tsc --noEmit",
    "push": "NODE_OPTIONS='--import tsx' npm run with-env drizzle-kit push",
    "studio": "NODE_OPTIONS='--import tsx' npm run with-env drizzle-kit studio",
    "with-env": "dotenvx run -f ../../.env --"
  },
  "exports": {
    "./*": {
      "types": "./src/*.ts",
      "default": "./dist/*.js"
    }
  },
  "devDependencies": {
    "@chat-next/eslint-config": "*",
    "@chat-next/typescript-config": "*",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.7",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.44.7",
    "pg": "^8.16.3",
    "zod": "^4.1.12"
  }
}
